datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("APPLICANT")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resumes Resume[] // One-to-Many relation with Resume
  logs    ResumeLog[] @relation("RecruiterLogs") // One-to-Many relation with ResumeLog as recruiter

  @@map("User")
}

enum Role {
  APPLICANT
  RECRUITER
}

model Resume {
  id           Int      @id @default(autoincrement())
  title        String
  introduction String
  status       String   @default("APPLY")
  authorId     Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  author User        @relation(fields: [authorId], references: [id])
  logs   ResumeLog[]

  @@map("Resume")
}

enum Status {
  APPLY
  DROP
  PASS
  INTERVIEW1
  INTERVIEW2
  FINAL_PASS
}

model ResumeLog {
  id          Int      @id @default(autoincrement())
  resumeId    Int
  recruiterId Int
  oldStatus   String
  newStatus   String
  reason      String
  createdAt   DateTime @default(now())

  resume    Resume @relation(fields: [resumeId], references: [id])
  recruiter User   @relation("RecruiterLogs", fields: [recruiterId], references: [id])

  @@map("ResumeLog")
}
